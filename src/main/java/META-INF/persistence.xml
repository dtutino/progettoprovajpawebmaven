<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="progettoprovajpawebmaven_unit" transaction-type="RESOURCE_LOCAL">
        <class>it.prova.progettoprovajpawebmaven.model.Segnalazione</class>
        <class>it.prova.progettoprovajpawebmaven.model.CommonEntity</class>
        <class>it.prova.progettoprovajpawebmaven.model.TipoSegnalazione</class>
        <class>it.prova.progettoprovajpawebmaven.model.Localita</class>
        <class>it.prova.progettoprovajpawebmaven.model.Stato</class> 		
		<properties>
			<!-- setup con MySql -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/progettoprovajpawebmaven?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="admin"/>
			
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
			<property name="hibernate.connection.pool_size" value="10"/>
			
			<property name="hibernate.show_sql" value="true"/>
			<!-- create-drop,create,update,validate -->
			<property name="hibernate.hbm2ddl.auto" value="create"/>
		</properties>
	</persistence-unit>
</persistence>